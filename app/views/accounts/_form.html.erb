<%= render partial: 'errors', locals: {account: @account} %>

<%= form_for account do |f| %>
  <div class="field_with_errors">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field_with_errors">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field_with_errors">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field_with_errors">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="avatar">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
