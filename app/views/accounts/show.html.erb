<h1>Hello <%= @account.username %>!</h1>

<div class="new_listing"><%= link_to "Create a new listing!", new_account_listing_path(@account.id) %></div>

<br>

<h2><%= @account.username %>'s listings</h2>
<div class="feed">
  <% @listings.each do |l| %>
  <h3><%= link_to l.name, account_listing_path(l.account_id, l.id) %></h3>
  <p><%= link_to l.account.username, account_path(l.account_id) %></p>
  <p><%= l.description %></p>
  <p>-----------------</p>
  <% end %>
</div>

<br>


<h3>Bids:</h3>
<div id="account_bids">
  <table class= "table ">
  <th> Listing</th>
  <th> Offer</th>
  <% @bids.each do |bid| %>
      <tr>
        <td>
        <% listing=Listing.find(bid.seller_listing_id)%>
        <%= listing.name%>
        </td>
        <td>
        <% offer= Listing.find(bid.buyer_listing_id)%>
        <%= offer.name%>
        </td>
      </tr>
      <%end%>
</div>
    </table>
