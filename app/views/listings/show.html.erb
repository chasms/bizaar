<p>Name: <%= @listing.name %></p>
<p>Description: <%= @listing.description %></p>
<p>Seller: <%= @listing.account.username %></p>

<% if @account == @user %>

<%= link_to "Edit Listing", edit_account_listing_path %>
<%= link_to "Delete Listing", account_listing_path(@account, @listing), method: :delete, data: {confirm: "You sure?"} %>


<% else %>
  <%= form_for @bid do |f| %>
    <select>
      <% @user.listings.each do |listing| %>

      <option value="<%= listing.id %>"><%= listing.name %></option>
      <%end%>
    </select>

  	<%= f.submit "Bid" %>
  <% end %>
<% end %>
