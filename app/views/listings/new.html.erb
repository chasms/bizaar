
<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error") %>
      prohibited this listing from being saved:
    </h2>

    <ul>
    <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="container" style="margin-top:100px;">
  <div class="col-md-offset-3 col-md-6 form-container" style=""> 
    <div class="form-title">Create a New Listing</div>
    <%= form_for [@account, @listing] do |f| %>
    	<div class="field_with_errors">
    		<%= f.label :name %>
    		<%= f.text_field :name, class: "form-control" %>
    	</div>

    	<div class="field_with_errors">
    		<%= f.label :description %>
    		<%= f.text_area :description, class: "form-control" %>
    	</div>

    	<%= f.hidden_field :account_id, :value => session[:account_id] %>
    	<%= f.submit "Create Listing", class: "btn btn-standard btn-standard-long", style: "width:100%;margin-top:20px;" %>
    <% end %>
  </div>
</div>